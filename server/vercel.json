{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node@18"
    },
    {
      "src": "server/dist/**",  // Updated path
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "server/server.js"
    },
    {
      "src": "/api/(.*)",  // Simplified API routes
      "dest": "server/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "server/dist/index.html"  // Updated path
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "FRONTEND_URL": "@frontend_url"
  }
}